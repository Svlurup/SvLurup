<script>
    // Startseite verlassen und Navigation anzeigen
    function enterSite() {
        document.getElementById('start-page').style.display = 'none';
        document.getElementById('navigation').style.display = 'block';
        showSection('games'); // Standardmäßig "Spiele" anzeigen
    }

    // Navigation: Nur die gewünschte Sektion anzeigen
    function showSection(sectionId) {
        const sections = document.querySelectorAll('.section');
        sections.forEach(section => section.classList.remove('active'));
        document.getElementById(sectionId).classList.add('active');
    }

    // Admin Login-Funktion
    function login() {
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;

        if (username === 'samet' && password === '123456') {
            document.getElementById('info-admin').style.display = 'block';
            alert('Erfolgreich eingeloggt!');
        } else {
            alert('Falscher Benutzername oder Passwort!');
        }
    }

    // Info hinzufügen
    function addInfo() {
        const newInfo = document.getElementById('new-info').value;
        if (newInfo) {
            const infoList = document.getElementById('info-list');
            const listItem = document.createElement('li');
            listItem.textContent = newInfo;
            infoList.appendChild(listItem);
            document.getElementById('new-info').value = '';
        }
    }
</script>

